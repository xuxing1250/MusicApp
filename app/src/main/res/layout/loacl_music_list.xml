<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >
    <RelativeLayout
        android:id="@+id/lay_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="#ffffff">
        <ImageButton
            android:id="@+id/local_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/edu"
            android:layout_marginStart="16dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="本地音乐"
            android:textSize="10pt"
            android:textColor="#000000"
            android:id="@+id/textView"
            android:layout_alignBottom="@+id/local_back"
            android:layout_centerHorizontal="true" />

        <ImageButton
            android:id="@+id/local_menu"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/e11"
            android:layout_toLeftOf="@+id/local_load"
            android:layout_marginEnd="16dp"

            />

        <ImageButton
            android:id="@+id/local_load"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/e4_"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="16dp"
            />
    </RelativeLayout>
    <View
        android:id="@+id/load_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#a1a1a1"
        android:layout_below="@+id/lay_1"
        />
    <RelativeLayout
        android:id="@+id/lay_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/load_line"
        android:background="#ffffff"
        >
        <LinearLayout
            android:id="@+id/lay_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/load_text_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="单曲"
                android:textSize="10pt"
                android:layout_weight="1"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/load_text_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="歌手"
                android:textSize="10pt"
                android:layout_weight="1"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/load_text_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="专辑"
                android:textSize="10pt"
                android:layout_weight="1"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/load_text_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="文件夹"
                android:textSize="10pt"
                android:layout_weight="1"
                android:gravity="center"
                />
        </LinearLayout>
    </RelativeLayout>
    <View
        android:id="@+id/load_line2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#a1a1a1"
        android:layout_below="@+id/lay_2"
        />
    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager2"
        android:layout_below="@id/lay_2"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center">
    </android.support.v4.view.ViewPager>
</RelativeLayout>
